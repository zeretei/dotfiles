alias df='df -h'
alias du='du -h'
alias free='free -m'

alias 000='chmod -R 000'
alias 644='chmod -R 644'
alias 666='chmod -R 666'
alias 755='chmod -R 755'
alias 777='chmod -R 777'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -iv'


alias cls='clear'
alias clrs='clear'
alias x='exit'
alias q='exit'



cd() { cd $1 && ls; }
mkcd() { mkdir $1 && cd $1; }
trash () { gvfs-trash "$@" && ls;  }